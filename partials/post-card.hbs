<article class="post-card {{post_class}}">
    <a class="post-card__link" href="{{url}}">
        {{#if feature_image}}
            <div class="post-card__image">
                <img
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    {{#if lazyLoad}}loading="lazy"{{/if}}
                >
            </div>
        {{else}}
            <div class="post-card__image">
                <div style="width: 100%; height: 200px; background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
                    <span>No Image</span>
                </div>
            </div>
        {{/if}}

        <div class="post-card__info">
            <h2>
                <span class="new-badge" data-published="{{published_at}}" style="display:none;color:#F00;">New</span>{{title}}
            </h2>
        </div>
    </a>
    {{#if primary_tag}}
        <a class="dfont cat-name catid68" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
    {{/if}}
</article>
