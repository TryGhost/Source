{{!-- Search Form Input Component --}}
{{!--
  Usage: {{> "search-form" placeholder="渋谷　中華" inputClass="header-search-input" buttonClass="header-search-btn"}}
  Parameters:
    - placeholder: プレースホルダーテキスト（デフォルト: "渋谷　中華"）
--}}
<div class="search-form">
    <input
        name="q"
        type="search"
        placeholder="{{#if placeholder}}{{placeholder}}{{else}}渋谷　中華{{/if}}"
        class="search-form-input"
        id="search-form-input"
    >
    <button type="submit" class="search-form-btn">検索</button>
</div>
