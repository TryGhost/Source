{{!-- Footer Component --}}
<footer class="footer">
    <div class="footer-container">
        {{!-- Logo --}}
    {{#if @site.logo}}
        <img src="{{@site.logo}}" alt="{{@site.title}}" class="header-logo-img">
    {{else}}
        <h2 class="footer-logo">{{@site.title}}</h2>
    {{/if}}


        {{!-- Navigation Links --}}
        <div class="footer-content">
            {{!-- Divider --}}
            <div class="footer-divider"></div>
            <nav class="footer-nav" aria-label="フッターナビゲーション">
                <ul class="footer-nav-list">
                    <li class="footer-nav-item">
                        <a href="/faq" class="footer-nav-link">FAQ</a>
                    </li>
                    <li class="footer-nav-item">
                        <a href="/privacy-policy" class="footer-nav-link">プライバシーポリシー</a>
                    </li>
                    <li class="footer-nav-item">
                        <a href="/terms" class="footer-nav-link">利用規約</a>
                    </li>
                    <li class="footer-nav-item">
                        <a href="/commercial-law" class="footer-nav-link">特定商取引法に基づく表示</a>
                    </li>
                </ul>
            </nav>

            {{!-- Copyright --}}
            <div class="footer-copyright">&copy; {{date format="YYYY"}} Magaco</div>
        </div>
    </div>
</footer>