{{{html}}}
{{#if @member.paid}}
<section class="gh-home-contents">
    <div class="gh-home-contents-inner">
        <div class="gh-home-contents-head">
            <h2 class="gh-home-contents-head-title">Q&A</h2>
        </div>

        <div class="gh-home-qa-container">
			<div class="gh-home-qa-cta">
				<h3>質問は不定期に<br/>Articleで回答予定!!!</h3>
				<a href="/questions-and-answers/">
					{{t "🏀 質問を投稿する ⛹️"}}
				</a>
			</div>
			{{#get "posts" filter="tag:qa" limit="1"}}
				{{#if posts.length}}
					<a class="gh-home-qa-latest-articles" href="/tag/qa/">
					<div>
						{{t "✉️ 最新のQ&Aを見る ✉️"}}
					</div>
					</a>
				{{/if}}
			{{/get}}
        </div>
    </div>
</section>
{{/if}}