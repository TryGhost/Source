{{{html}}}
<div class="fadeout">
    <div class="fadeout-content">
        {{{html}}}
    </div>
</div>
<aside class="gh-post-upgrade-cta">
    <div class="gh-post-upgrade-cta-content" style="background-color: {{@site.accent_color}}">
        {{#has visibility="paid"}}
            <h2>{{t "This content is for paying subscribers only"}}</h2>
        {{/has}}
        {{#has visibility="members"}}
            <h2>{{t "This content is for subscribers only"}}</h2>
        {{/has}}
        {{#has visibility="tiers"}}
            <h2>{{t "This content is for subscribers on the following tiers only:"}}  {{tiers}}</h2>
        {{/has}}
        {{#if @member}}
            <a class="gh-btn" data-portal="account/plans" href="#/portal/account/plans" style="color:{{@site.accent_color}}">{{t "Upgrade your account"}}</a>
        {{else}}
            <a class="gh-btn" data-portal="signup" href="#/portal/signup" style="color:{{@site.accent_color}}">{{t "Subscribe"}}</a>
            <p><small>{{t "Already member?"}} <a data-portal="signin" href="#/portal/signin">{{t "Sign in"}}</a></small></p>
        {{/if}}
    </div>
</aside>
