{{{html}}}
<aside class="gh-post-upgrade-cta">
	<div class="gh-post-upgrade-cta-gradation"></div>
	<div class="gh-post-upgrade-cta-content">
		{{#has visibility="paid"}}
			<h2>この先は部員限定</h2>
			{{#if @member}}
				<a class="gh-post-upgrade-signup-link" href="#/portal/signup" data-portal="signup">
					{{t "プランを確認する"}}
				</a>
			{{/if}}
		{{/has}}

		{{#has visibility="members"}}
			<h2>この先は部員限定</h2>
		{{/has}}

		{{#has visibility="tiers"}}
			<h2>この先は
				{{#foreach tiers}}
					{{name}}プラン
				{{/foreach}} 限定
			</h2>
			{{#if @member}}
				<a class="gh-post-upgrade-signup-link" href="#/portal/signup" data-portal="signup">
					{{t "プランを確認する"}}
				</a>
			{{/if}}
		{{/has}}

		{{^if @member}}
			<a class="gh-post-upgrade-signup-link" href="#/portal/signup" data-portal="signup">
				{{t "🏀入部する⛹️"}}
			</a>
		{{/if}}
	</div>
</aside>