{{#if pagination}}
<nav class="pagination dfont">
    <ul class="page-numbers">
        {{#if pagination.prev}}
        <li><a class="prev page-numbers" href="{{pagination.prev}}"><i class="fa fa-chevron-left"></i></a></li>
        {{/if}}

        {{#foreach pagination.pages}}
            {{#if page}}
                <li><a class="page-numbers" href="{{url}}">{{page}}</a></li>
            {{else}}
                {{#if current}}
                    <li><span aria-current="page" class="page-numbers current">{{current}}</span></li>
                {{else}}
                    <li><span class="page-numbers dots">â€¦</span></li>
                {{/if}}
            {{/if}}
        {{/foreach}}

        {{#if pagination.next}}
        <li><a class="next page-numbers" href="{{pagination.next}}"><i class="fa fa-chevron-right"></i></a></li>
        {{/if}}
    </ul>
</nav>
{{/if}}
