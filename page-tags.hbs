{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="gh-main">
    <article class="gh-article {{post_class}}">

        {{#match @page.show_title_and_feature_image}}
            <header class="gh-article-header gh-canvas">
                <h1 class="gh-article-title is-title">{{title}}</h1>
                {{#if custom_excerpt}}
                    <p class="gh-article-excerpt is-body">{{custom_excerpt}}</p>
                {{/if}}
                {{> "feature-image"}}
            </header>
        {{/match}}
        <section class="gh-content gh-canvas is-body">
        {{#get 'tags' limit='all' include='count.posts,description,feature_image' order='count.posts desc'}}
            {{#foreach tags}}
                <div class="gh-card">
                  <a href='{{ url }}'>
                    <h3>{{ name }}</h3>
                  </a>
                  <p>({{ count.posts }} Posts)</p>
                  {{#if feature_image}}
                    <a href='{{ url }}' alt='{{ description }}'>
                      <img src='{{ feature_image }}' alt='{{ description }}' />
                    </a>
                  {{/if}}
                  <p>{{ description }}</p>
                </div>
            {{/foreach}}
        {{/get}}
            {{!-- {{content}} --}}
        </section>

    </article>
</main>

{{/post}}
