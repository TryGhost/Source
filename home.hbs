{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{> "components/search-form"}}

{{#match @custom.header_style "!=" "Highlight"}}
    {{> "components/featured" showFeatured=@custom.show_featured_posts limit=4}}
{{/match}}

{{> "components/cta"}}

<div class="gh-content-wrapper">
    <main class="gh-main-content">
        {{> "components/content-menu" active="home"}}

        <div class="post-grid">
            {{#get "posts" include="authors,tags" limit="24"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}
        </div>

        <div class="text-center">
            <p>
                <a href="/page/2/" class="btn raised red-bc strong center">もっと見る</a>
            </p>
        </div>

        {{> "components/content-menu" active="home"}}
    </main>

    {{> "sidebar"}}
</div>
