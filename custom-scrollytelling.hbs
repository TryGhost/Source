    </div>

    <script>
        const visualContent = document.getElementById('visualContent');
        const steps = document.querySelectorAll('.content-step');

        const visualStates = [
            {
                html: '<div class="record-display">17-0</div><div class="record-label">Perfect Record</div>'
            },
            {
                html: '<div class="stat-box"><div class="stat-number">Don Shula</div><div class="stat-label">Head Coach</div></div>'
            },
            {
                html: '<div class="stat-display"><div class="stat-box"><div class="stat-number">Bob<br>Griese</div><div class="stat-label">Starting QB</div></div><div class="stat-box"><div class="stat-number">Earl<br>Morrall</div><div class="stat-label">Backup QB</div></div></div>'
            },
            {
                html: '<div class="stat-display"><div class="stat-box"><div class="stat-number">12.2</div><div class="stat-label">Points Allowed<br>Per Game</div></div><div class="stat-box"><div class="stat-number">2.0</div><div class="stat-label">Turnovers<br>Per Game</div></div></div>'
            },
            {
                html: '<div class="stat-display"><div class="stat-box"><div class="stat-number">1,117</div><div class="stat-label">Larry Csonka<br>Rush Yards</div></div><div class="stat-box"><div class="stat-number">1,000</div><div class="stat-label">Mercury Morris<br>Rush Yards</div></div></div>'
            },
            {
                html: '<div class="stat-display"><div class="stat-box"><div class="stat-number">14-7</div><div class="stat-label">Super Bowl VII<br>Final Score</div></div><div class="stat-box"><div class="stat-number">Jake<br>Scott</div><div class="stat-label">Super Bowl<br>MVP</div></div></div>'
            },
            {
                html: '<div class="trophy-icon">üèÜ</div><div class="record-label">Only Perfect Season</div>'
            }
        ];

        function updateVisual(stepIndex) {
            if (stepIndex >= 0 && stepIndex < visualStates.length) {
                visualContent.style.opacity = '0';
                visualContent.style.transform = 'scale(0.9)';

                setTimeout(() => {
                    visualContent.innerHTML = visualStates[stepIndex].html;
                    visualContent.style.opacity = '1';
                    visualContent.style.transform = 'scale(1)';
                }, 300);
            }
        }

        const observerOptions = {
            root: null,
            rootMargin: '-50% 0px -50% 0px',
            threshold: 0
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const stepIndex = parseInt(entry.target.getAttribute('data-step'));
                    updateVisual(stepIndex);
                }
            });
        }, observerOptions);

        steps.forEach(step => {
            observer.observe(step);
        });

        // Initialize with first visual
        updateVisual(0);
    </script>
