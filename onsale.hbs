{{!< default}}
{{!-- Template for /onsale page - showing posts tagged with "review" --}}

{{> "components/search-form"}}

{{> "components/breadcrumb"}}

<div class="gh-content-wrapper">
    <main class="gh-main-content">
        {{> "components/content-menu" active="onsale"}}

        <div class="post-grid">
            {{#get "posts" include="authors,tags" limit="24"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}
        </div>

        {{> "pagination"}}
    </main>

    {{> "sidebar"}}
</div>
