{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="post-main">

    {{!-- Hero Section --}}
    <section class="post-hero" {{#if feature_image}}style="background-image: url('{{img_url feature_image size="xl"}}')"{{/if}}>
        <div class="post-hero-content">
            {{#if tags}}
            <div class="post-hero-tags">
                {{#foreach tags limit="5"}}
                    <a class="post-hero-tag" href="{{url}}">#{{name}}</a>
                {{/foreach}}
            </div>
            {{/if}}

            <div class="post-hero-title">
                <h1>{{title}}</h1>
            </div>

            <time class="post-hero-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="YYYY. MM. DD"}}
            </time>
        </div>
        {{!-- Magazine Label Overlay --}}
        <div class="post-magazine-label" data-post-id="{{id}}" data-content-api-key="{{content_api_key}}">
            <img src="" alt="" width="117" height="46">
        </div>
    </section>

    {{!-- Content Section --}}
    <section class="post-content-wrapper">
        <div class="post-content">
            <div class="post-content-inner">

                {{!-- Breadcrumbs and Favorite --}}
                <div class="post-meta-header">
                    <div class="post-breadcrumbs">
                        <a href="{{@site.url}}">Top</a>
                        <span class="post-breadcrumb-separator">›</span>
                        <span>記事詳細</span>
                    </div>
                    {{#if @member}}
                        {{#has visibility="paid"}}
                            {{#if @member.paid}}
                            {{> "components/post-like" stroke_color="#000" post_id=id}}
                            {{/if}}
                        {{else}}
                            {{> "components/post-like" stroke_color="#000" post_id=id}}
                        {{/has}}
                    {{/if}}
                </div>

                {{!-- Rich Text Content --}}
                <div class="post-rich-text">
                    {{content}}
                </div>

                <div class="post-logo">
                    {{#if group.logo_image}}
                        <img src="{{img_url group.logo_image size="xs"}}" alt="{{group.name}}" class="post-author-image">
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</main>

{{/post}}
